# ====================================
# Safe Yields Environment Variables
# ====================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ====================================
# Site Configuration
# ====================================
NEXT_PUBLIC_SITE_URL=https://safe-yields.com
NEXT_PUBLIC_SITE_NAME=Safe Yields
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og/default.png

# ====================================
# API Configuration
# ====================================
NEXT_PUBLIC_API_URL=http://localhost:3000
DEFI_LLAMA_BASE=https://api.llama.fi

# ====================================
# Protocol Affiliate Links
# ====================================
# Add your affiliate/referral codes after the base URLs

# Lido
NEXT_PUBLIC_LIDO_AFFILIATE=https://stake.lido.fi

# Rocket Pool
NEXT_PUBLIC_ROCKETPOOL_AFFILIATE=https://rocketpool.net

# Aave V3
NEXT_PUBLIC_AAVEV3_AFFILIATE=https://app.aave.com

# Compound V3
NEXT_PUBLIC_COMPOUNDV3_AFFILIATE=https://app.compound.finance

# Curve Finance
NEXT_PUBLIC_CURVE_AFFILIATE=https://curve.fi

# ====================================
# Exchange Affiliate Links
# ====================================
# Replace YOUR_REF_CODE with your actual referral codes

# Binance (20% trading fee discount for referrals)
NEXT_PUBLIC_BINANCE_AFFILIATE=https://accounts.binance.com/register?ref=YOUR_REF_CODE

# Coinbase (User-friendly for beginners)
NEXT_PUBLIC_COINBASE_AFFILIATE=https://www.coinbase.com/join/YOUR_REF_CODE

# Bybit (Bonus rewards available)
NEXT_PUBLIC_BYBIT_AFFILIATE=https://www.bybit.com/invite?ref=YOUR_REF_CODE

# Kraken (Low fees & high security)
NEXT_PUBLIC_KRAKEN_AFFILIATE=https://www.kraken.com/sign-up?ref=YOUR_REF_CODE

# OKX (Global exchange)
NEXT_PUBLIC_OKX_AFFILIATE=https://www.okx.com/join/YOUR_REF_CODE

# ====================================
# Hardware Wallet Affiliate Links
# ====================================

# Ledger
NEXT_PUBLIC_LEDGER_AFFILIATE=https://www.ledger.com?r=YOUR_REF_CODE

# Trezor
NEXT_PUBLIC_TREZOR_AFFILIATE=https://trezor.io?ref=YOUR_REF_CODE

# ====================================
# Analytics & Tracking (Optional)
# ====================================
# These are typically auto-configured by Vercel
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics (if using)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ====================================
# Development Settings (Optional)
# ====================================
# PORT=3000
# NODE_ENV=development